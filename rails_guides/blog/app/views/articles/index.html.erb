<h1>Listing articles</h1>

<h3>Hello <%= @username %></h3>

<%= link_to 'New article', new_article_path %>
<table>
    <tr>
	<th>Title</th>
	<th>Text</th>
	<th colspan="3">Action</th>
    </tr>

    <% @articles.each do |article| %>
	<tr>
	    <td><%= article.title %></td>
	    <td><%= article.text %></td>
	    <td><%= link_to 'Show', article_path(article) %></td>
	    <td><%= link_to 'Edit', edit_article_path(article) %></td>
	    <td><%= link_to 'Destroy', article_path(article),
		method: :delete, # this is the HTTP DELETE method (REST style)
		data: { confirm: 'Are you sure?' } # show a confirm dialog
		# this is done via rails-ujs included in the application's
		    # layout file (app/views/layouts/application.html.erb)
		    # the u in ujs means Unobtrusive (not easily noticeable)
		%>
	    </td>
	</tr>
    <% end %>
</table>